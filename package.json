{
  "name": "generator-gcloud",
  "version": "0.1.1",
  "description":
    "Yeoman generator generating projects for Google Cloud Platform",
  "homepage": "https://github.com/growit-io/generator-gcloud",
  "author": {
    "name": "Uwe Stuehler",
    "email": "ustuehler@growit.io",
    "url": "https://growit.io"
  },
  "files": ["generators"],
  "main": "generators/app/index.js",
  "keywords": ["google-cloud-platform", "gcloud", "yeoman-generator"],
  "devDependencies": {
    "eslint": "^4.13.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "standard-version": "^4.2.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0",
    "yo": "^2.0.0"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.1",
    "chalk": "^2.1.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "ci":
      "npm install --only=dev && npm run precommit && npm run test && npm run prerelease",
    "precommit": "lint-staged",
    "pretest": "eslint .",
    "test": "jest",
    "prerelease": "hack/validate-commit-history && hack/build-example",
    "release": "npm run prerelease && standard-version",
    "prepublishOnly": "nsp check"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "growit-io/generator-gcloud",
  "license": "ISC"
}
